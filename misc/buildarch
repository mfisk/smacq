#!/bin/sh

platform=`uname -sm| sed 's/  */-/g'`
srcdir=`pwd`
builddir="build/$platform"

build() {

	if [ \! -f $builddir/Makefile ]; then
		mkdir -p $builddir
		cd $builddir
		$srcdir/configure --srcdir=$srcdir
	else 
		cd $builddir
	fi
	
	echo "Building in $builddir"
	make all test 
}

(build)
ln -sf $builddir/bin/smacqq
